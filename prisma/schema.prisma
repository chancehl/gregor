generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  summoner Summoner? @relation(fields: [summonerId], references: [id])

  summonerId Int
  @@map("users")
}

model Squad {
  id      Int        @id @default(autoincrement())
  name    String
  ownerId String
  members Summoner[]
  region  Region?

  @@map("squads")
}

model Summoner {
  id      Int    @id
  name    String
  Squad   Squad? @relation(fields: [squadId], references: [id])
  squadId Int?

  User User[]
  @@map("Summoners")
}

enum Region {
  NA
  EU
  KR
}

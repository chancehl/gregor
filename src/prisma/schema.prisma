generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Squad {
  id          Int        @id @default(autoincrement())
  name        String
  ownerId     String
  region      Region?
  summoners   Summoner[]
  records     Record[]
  refreshedOn String

  @@map("squads")
}

model Summoner {
  id      String @id
  puuid   String
  name    String
  Squad   Squad? @relation(fields: [squadId], references: [id], onDelete: Cascade)
  squadId Int?

  @@map("summoners")
}

model Record {
  id           Int        @id @default(autoincrement())
  type         RecordType
  owner        String?
  value        String?
  participants String[]
  squadId      Int?
  Squad        Squad?     @relation(fields: [squadId], references: [id], onDelete: Cascade)

  @@map("records")
}

enum RecordType {
  MOST_PERSONAL_KILLS
  MOST_PERSONAL_DEATHS
  MOST_PERSONAL_ASSISTS
  HIGHEST_KDA
  LOWEST_KDA
  MOST_GOLD
  HIGHEST_CS
  FASTEST_GAME
  LOWEST_CS
}

enum Region {
  NA
  EU
  KR
}
